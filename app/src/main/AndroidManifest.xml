<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.grocerieDev">

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_toastface"
        android:label="GrocerieDev"
        android:roundIcon="@mipmap/ic_launcher_toastface"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.android.grocerieDev.MainActivitiesAndFragments.HomePage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.android.grocerieDev.MainActivitiesAndFragments.IngredientPositionEditor"/>
        <activity
            android:name="com.example.android.grocerieDev.MainActivitiesAndFragments.IngredientEditor"
            android:windowSoftInputMode="stateVisible"
            android:parentActivityName="com.example.android.grocerieDev.MainActivitiesAndFragments.IngredientListActivity"/>
        <activity
            android:name="com.example.android.grocerieDev.MainActivitiesAndFragments.CategoryEditor"
            android:windowSoftInputMode="stateVisible"
            android:parentActivityName="com.example.android.grocerieDev.MainActivitiesAndFragments.CategoryListActivity"/>
        <activity android:name="com.example.android.grocerieDev.MainActivitiesAndFragments.ShoppingListActivity"/>
        <activity android:name="com.example.android.grocerieDev.MainActivitiesAndFragments.IngredientListActivity"/>
        <activity android:name="com.example.android.grocerieDev.MainActivitiesAndFragments.CategoryListActivity"/>
        <provider
            android:name="com.example.android.grocerieDev.data.IngredientProvider"
            android:authorities="com.example.android.grocerieDev"
            android:exported="true" />
    </application>

</manifest>